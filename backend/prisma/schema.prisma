generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- ENUMS ---
enum Role {
  pic
  admin
}

enum NotificationStatus {
  Succeed 
  failed
  pending
}

enum RequestStatus {
  pending
  approved
  rejected
  completed
}

enum ReportType {
  borrow
  transfer
  sell
  demolish
}

enum ItemCondition {
  good
  damaged
  broken
}

enum ItemStatus {
  borrowed
  transferred
  sold
  demolished
}

// --- MODELS ---

model Users {
  id              Int               @id @default(autoincrement())
  employee_id     String            @unique
  username        String            @unique
  name            String
  role            Role              @default(pic)
  phone_number    String?
  password_hash   String
  is_active       Boolean           @default(true)
  telegram_id     String?
  created_at      DateTime          @default(now())

  // Relations - Harus merujuk ke nama model yang baru (jamak)
  requests_as_pic   Requests[]       @relation("PICRequests")
  requests_as_admin Requests[]       @relation("AdminApprovals")
  reports_issued    OfficialReports[]
  notifications     Notifications[]
  password_resets   PasswordResets[]
  logs_moved        ItemLogHistory[]
}

model Items {
  id                 Int               @id @default(autoincrement())
  name               String
  items_code         String            @unique
  category           String
  available_quantity Int
  total_quantity     Int
  procurement_year   Int
  condition          ItemCondition
  status             ItemStatus
  qr_code            String?
  created_at         DateTime          @default(now())

  location_id        Int
  location           Locations         @relation(fields: [location_id], references: [id])

  photos             ItemPhotos[]
  request_items      RequestItems[]
  log_histories      ItemLogHistory[]
}

model Locations {
  id              Int               @id @default(autoincrement())
  location_code   String            @unique
  building_name   String
  floor           String
  address         String            @db.Text

  items           Items[]
  logs_from       ItemLogHistory[]  @relation("FromLocation")
  logs_to         ItemLogHistory[]  @relation("ToLocation")
}

model Requests {
  id            Int            @id @default(autoincrement())
  request_code  String         @unique
  request_type  ReportType
  reason        String         @db.Text
  status        RequestStatus  @default(pending)
  approved_at   DateTime?
  created_at    DateTime       @default(now())

  pic_id        Int
  pic           Users          @relation("PICRequests", fields: [pic_id], references: [id])
  
  admin_id      Int?
  admin         Users?         @relation("AdminApprovals", fields: [admin_id], references: [id])

  request_items RequestItems[]
  report        OfficialReports?
  log_histories ItemLogHistory[]
}

model RequestItems {
  id          Int      @id @default(autoincrement())
  quantity    Int

  request_id  Int
  request     Requests @relation(fields: [request_id], references: [id])
  
  item_id     Int
  item        Items    @relation(fields: [item_id], references: [id])
}

model ItemPhotos {
  id          Int      @id @default(autoincrement())
  file_path   String
  uploaded_at DateTime @default(now())

  item_id     Int
  item        Items    @relation(fields: [item_id], references: [id])
}

model OfficialReports {
  id            Int      @id @default(autoincrement())
  report_number String   @unique
  report_type   ReportType
  issued_date   DateTime @default(now())
  file_path     String
  created_at    DateTime @default(now())

  request_id    Int      @unique
  request       Requests @relation(fields: [request_id], references: [id])
  
  issued_by_id  Int
  issued_by     Users    @relation(fields: [issued_by_id], references: [id])
}

model ItemLogHistory {
  id                Int      @id @default(autoincrement())
  moved_at          DateTime @default(now())

  item_id           Int
  item              Items    @relation(fields: [item_id], references: [id])

  from_location_id  Int
  from_location     Locations @relation("FromLocation", fields: [from_location_id], references: [id])

  to_location_id    Int
  to_location       Locations @relation("ToLocation", fields: [to_location_id], references: [id])

  request_id        Int?
  request           Requests? @relation(fields: [request_id], references: [id])

  moved_by_id       Int
  moved_by          Users     @relation(fields: [moved_by_id], references: [id])
}

model Notifications {
  id          Int                @id @default(autoincrement())
  message     String             @db.Text
  status      NotificationStatus @default(pending)
  created_at  DateTime           @default(now())

  user_id     Int
  user        Users               @relation(fields: [user_id], references: [id])
}

model PasswordResets {
  id          Int       @id @default(autoincrement())
  created_at  DateTime  @default(now()) // Tambahan agar tahu kapan reset diminta

  user_id     Int
  user        Users     @relation(fields: [user_id], references: [id])
}